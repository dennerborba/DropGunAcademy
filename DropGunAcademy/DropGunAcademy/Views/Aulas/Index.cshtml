@using DropGunAcademy.Models.Aulas
@model AulasModel

<div class="text-center">
    <table class="table table-hover table-light">
        <thead>
            <tr>
                <th>ID aula</th>
                <th>Aula de aviação</th>
                <th>Data da aula</th>
                <th>Ação</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var aula in Model.Aulas)
            {
                <tr>
                    <td>@aula.Id</td>
                    <td>@aula.NomeAula</td>
                    <td>@aula.DataAula</td>
                    <td><a type="button" class="btn btn-danger" asp-controller="Aulas" asp-action="">Editar Aula</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>